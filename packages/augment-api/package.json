{
  "name": "@kiltprotocol/augment-api",
  "version": "0.30.1-1",
  "description": "",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/cjs/index.d.ts",
  "exports": {
    "./spiritnet": {
      "types": "./lib/cjs/spiritnet/index.d.ts",
      "require": "./lib/cjs/spiritnet/index.js",
      "default": "./lib/esm/spiritnet/index.js"
    },
    "./peregrine": {
      "types": "./lib/cjs/peregrine/index.d.ts",
      "require": "./lib/cjs/peregrine/index.js",
      "default": "./lib/esm/peregrine/index.js"
    },
    "./spiritnet/types": {
      "types": "./lib/cjs/spiritnet/types/index.d.ts",
      "require": "./lib/cjs/spiritnet/types/index.ts",
      "default": "./lib/esm/spiritnet/types/index.js"
    },
    "./peregrine/types": {
      "types": "./lib/cjs/peregrine/types/index.d.ts",
      "require": "./lib/cjs/peregrine/types/index.js",
      "default": "./lib/esm/peregrine/types/index.js"
    },
    "./spiritnet/interfaces/defs": {
      "types": "./lib/cjs/spiritnet/interfaces/defs/index.d.ts",
      "require": "./lib/cjs/spiritnet/interfaces/defs/index.ts",
      "default": "./lib/esm/spiritnet/interfaces/defs/index.js"
    },
    "./peregrine/interfaces/defs": {
      "types": "./lib/cjs/peregrine/interfaces/defs/index.d.ts",
      "require": "./lib/cjs/peregrine/interfaces/defs/index.ts",
      "default": "./lib/esm/peregrine/interfaces/defs/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "spiritnet": [
        "lib/cjs/spiritnet/index.d.ts"
      ],
      "peregrine": [
        "lib/cjs/peregrine/index.d.ts"
      ],
      "spiritnet/types": [
        "lib/cjs/spiritnet/types/index.d.ts"
      ],
      "peregrine/types": [
        "lib/cjs/peregrine/types/index.d.ts"
      ],
      "spiritnet/interfaces/defs": [
        "lib/cjs/spiritnet/interfaces/defs/index.d.ts"
      ],
      "peregrine/interfaces/defs": [
        "lib/cjs/peregrine/interfaces/defs/index.d.ts"
      ]
    }
  },
  "files": [
    "lib/**/*",
    "!**/*.tsbuildinfo",
    "!**/*.tgz"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "yarn clean && yarn build:ts",
    "build:types": "yarn generate:defs && yarn generate:meta && yarn build:fixes",
    "build:fixes": "node scripts/fixTypes.mjs",
    "build:ts": "yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc -b tsconfig.build.json && echo '{\"type\":\"commonjs\"}' > ./lib/cjs/package.json",
    "build:esm": "tsc -b tsconfig.esm.json && echo '{\"type\":\"module\"}' > ./lib/esm/package.json",
    "generate:defs": "yarn run generate:defs:spiritnet && yarn run generate:defs:peregrine",
    "generate:defs:spiritnet": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-defs --package @kiltprotocol/augment-api/spiritnet/interfaces --input ./src/spiritnet/interfaces --endpoint ./metadata/spiritnet.json",
    "generate:defs:peregrine": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-defs --package @kiltprotocol/augment-api/peregrine/interfaces --input ./src/peregrine/interfaces --endpoint ./metadata/peregrine.json",
    "generate:meta": "yarn run generate:meta:spiritnet && yarn run generate:meta:peregrine",
    "generate:meta:spiritnet": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-chain --endpoint ./metadata/spiritnet.json --package @kiltprotocol/augment-api/spiritnet/interfaces --output ./src/spiritnet/interfaces",
    "generate:meta:peregrine": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-chain --endpoint ./metadata/peregrine.json --package @kiltprotocol/augment-api/peregrine/interfaces --output ./src/peregrine/interfaces",
    "update-metadata": "node ./scripts/fetchMetadata.js -o './metadata/spiritnet.json' -e 'wss://spiritnet.kilt.io/' && node ./scripts/fetchMetadata.js -o './metadata/peregrine.json' -e 'wss://peregrine.kilt.io/parachain-public-ws/'"
  },
  "repository": "github:kiltprotocol/sdk-js",
  "engines": {
    "node": ">=14.0"
  },
  "author": "",
  "license": "BSD-4-Clause",
  "bugs": "https://github.com/KILTprotocol/sdk-js/issues",
  "homepage": "https://github.com/KILTprotocol/sdk-js#readme",
  "devDependencies": {
    "@polkadot/api": "^9.4.1",
    "@polkadot/typegen": "^9.4.1",
    "@types/websocket": "^1.0.0",
    "glob": "^7.1.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.8.3",
    "websocket": "^1.0.31",
    "yargs": "^16.2.0"
  },
  "dependencies": {
    "@kiltprotocol/type-definitions": "workspace:*"
  }
}
