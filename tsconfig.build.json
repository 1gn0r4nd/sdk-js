{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": false,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": "./packages",
    "paths": {
      // uncomment the following lines to check against testnet types during package build
      // "@kiltprotocol/augment-api": ["augment-api/lib/cjs/peregrine"],
      // "@kiltprotocol/augment-api/*": ["augment-api/lib/cjs/peregrine/*"],
    }
  },
  "exclude": [
    "**/node_modules",
    "**/lib"
  ],
}
